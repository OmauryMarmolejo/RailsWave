<div class="container mx-auto py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold">Welcome to My Blog</h1>
    <%= link_to "New Post", new_post_path, class: "inline-block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% @posts.each do |post| %>
    <div class="bg-white rounded-lg shadow-md p-6 mb-4">
      <h2 class="text-2xl font-bold mb-2"><%= post.title %></h2>
      <p class="text-gray-700 mb-4"><%= truncate(post.body, length: 100) %></p>
      <%= link_to 'Read More', post_path(post), class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>
</div>